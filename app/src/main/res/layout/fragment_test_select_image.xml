<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <Button
                android:id="@+id/openimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开大图页面" />

            <com.aligit.base.widget.SelectOneImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                app:addImage="@mipmap/upload_front"
                app:isCenterCrop="false"
                app:openType="0" />

            <com.aligit.base.widget.select_image.SelectImageView
                android:id="@+id/sel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:addImage="@mipmap/ic_launcher"
                app:maxSelectNum="3"
                app:spanCount="3" />

            <LinearLayout
                android:id="@+id/addLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.aligit.base.widget.show_grid_image.ShowGridImageView
                android:id="@+id/onlyShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/showLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>