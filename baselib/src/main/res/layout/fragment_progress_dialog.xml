<?xml version="1.0" encoding="utf-8"?>
<com.thirtydays.baselib.widget.round.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="48dp"
    android:paddingTop="24dp"
    android:paddingEnd="48dp"
    android:paddingBottom="24dp"
    app:rv_backgroundColor="@android:color/white"
    app:rv_cornerRadius="4dp">

    <androidx.core.widget.ContentLoadingProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/loading"
        android:textColor="@color/text_color_primary_alpha_80"
        android:textSize="14sp" />
</com.thirtydays.baselib.widget.round.RoundLinearLayout>